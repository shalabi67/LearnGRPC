@{
    ViewData["BaseCssClass"] = "update-employee";
    ViewData["Title"] = "Update Employee";
}

@model VacationTrackerAdmin.Models.Employee

<h1 class="text-center">Update Employee</h1>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="column small-10 small-offset-1 end">
            <div class="row">
                <h2 class="columns small-12">
                    Employee Data
                </h2>
            </div>
            <div class="row">
                <div class="columns small-6">
                    @Html.DisplayNameFor(m => m.Id)
                    <br />
                    @Html.ValueFor(m => m.Id)
                    @Html.HiddenFor(m => m.Id)
                </div>
                <div class="columns small-6">
                    @Html.LabelFor(m => m.BadgeNumber)
                    @Html.TextBoxFor(m => m.BadgeNumber, "", new { type = "number" })
                </div>
            </div>
            <div class="row">
                <div class="columns small-6">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="columns small-6">
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName)
                </div>
            </div>

            <div class="row">
                <div class="columns small-6">
                    @Html.LabelFor(m => m.VacationAccrualRate)
                    @Html.TextBoxFor(m => m.VacationAccrualRate)
                </div>
                <div class="columns small-6">
                    @Html.LabelFor(m => m.VacationAccrued)
                    @Html.TextBoxFor(m => m.VacationAccrued)
                </div>
            </div>
            <div class="row">
                <h2 class="columns small-12">
                    Vacations
                </h2>
                <div class="row">
                    <div class="columns small-2 text-center">
                        Id
                    </div>
                    <div class="columns small-4">
                        Start Date
                    </div>
                    <div class="columns small-4">
                        Duration
                    </div>
                    <div class="columns small-2 text-center">
                        Cancelled?
                    </div>
                </div>
            </div>
            <br />
            @for (var i = 0; i < Model.Vacations.Count; i++)
            {
                <div class="row">
                    <div class="columns small-2 text-center">
                        @Model.Vacations[i].Id
                        @Html.HiddenFor(m => Model.Vacations[i].Id)
                    </div>
                    <div class="columns small-4">
                        @Html.TextBoxFor(m => Model.Vacations[i].StartDate, "{0:yyyy-MM-dd}", new { type = "date" })
                    </div>
                    <div class="columns small-4">
                        @Html.TextBoxFor(m => Model.Vacations[i].Duration, "", new { type = "number" })
                    </div>
                    <div class="columns small-2 text-center">
                        @Html.CheckBoxFor(m => Model.Vacations[i].IsCancelled)
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="columns small-2 small-offset-10">
            <button type="submit">Submit</button>
        </div>
    </div>
}



